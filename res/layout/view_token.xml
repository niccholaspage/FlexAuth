<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="25dp" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/authCode"
        android:textColor="#ffffff"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/authCode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#66000044"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:text="@+id/TextView02"
        android:textColor="#ffffff"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tokenSerial"
        android:textColor="#ffffff"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/tokenSerialText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#66000044"
        android:drawablePadding="10dp"
        android:longClickable="true"
        android:padding="10dp"
        android:text="@+id/TextView02"
        android:textColor="#ffffff"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/tokenSecret"
        android:textColor="#ffffff"
        android:textSize="20sp" >
    </TextView>

    <TextView
        android:id="@+id/tokenSecretText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#66000044"
        android:drawablePadding="10dp"
        android:longClickable="true"
        android:padding="10dp"
        android:text="@+id/TextView04"
        android:textColor="#ffffff"
        android:textStyle="bold" >
    </TextView>

</LinearLayout>